<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Historian.BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/historian_color_primary</item>
    <item name="colorPrimaryDark">@color/historian_color_primary_variant</item>
    <item name="colorSecondary">@color/historian_color_secondary</item>
    <item name="android:colorBackground">@color/historian_color_background</item>
    <item name="colorSurface">@color/historian_color_surface</item>
    <item name="colorError">@color/historian_status_log</item>
    <item name="colorOnPrimary">@color/historian_color_on_primary</item>
    <item name="colorOnSecondary">@color/historian_color_on_secondary</item>
    <item name="colorOnBackground">@color/historian_color_on_background</item>
    <item name="colorOnSurface">@color/historian_color_on_surface</item>
    <item name="colorOnError">@color/historian_color_on_error</item>
  </style>

  <style name="Historian.Theme" parent="Historian.BaseTheme" />

  <style name="Historian.TextAppearance.ListItem" parent="android:TextAppearance">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Historian.TextAppearance.Label" parent="android:TextAppearance.Small">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Historian.TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
    <item name="android:textSize">16sp</item>
    <item name="android:maxLines">2</item>
    <item name="android:ellipsize">end</item>
  </style>
</resources>